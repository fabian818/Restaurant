<h1>Listing waiters</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Clients</th>
      <th>Salary</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waiters.each do |waiter| %>
      <tr>
        <td><%= waiter.person_id %></td>
        <td><%= waiter.clients %></td>
        <td><%= waiter.salary %></td>
        <td><%= waiter.state %></td>
        <td><%= link_to 'Show', waiter %></td>
        <td><%= link_to 'Edit', edit_waiter_path(waiter) %></td>
        <td><%= link_to 'Destroy', waiter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Waiter', new_waiter_path %>
